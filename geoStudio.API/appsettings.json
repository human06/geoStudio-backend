{
  "ConnectionStrings": {
    "DefaultConnection": "Host=<postgres-host>;Port=5432;Database=geostudio;Username=<user>;Password=<password>;",
    "RedisConnection": "<redis-host>:6379"
  },
  "Jwt": {
    "SecretKey": "<your-secret-key-min-32-chars>",
    "Issuer": "geoStudio",
    "Audience": "geoStudioUsers",
    "ExpirationMinutes": 15,
    "RefreshTokenExpiryDays": 7
  },
  "AllowedOrigins": "http://localhost:3000",
  "Hangfire": {
    "Dashboard": {
      "AllowedIPs": ["127.0.0.1", "::1"]
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
